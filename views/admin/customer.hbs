<div class="container">
    <div class="p-20 z-depth-top-0 waves-effect" style="background-color: #e6ecff">
        {{> messages }}
        <form action="/admin/customer" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div>
                <img class="nav-item py-md-2" src="/profile/{{{customer.imageUrl}}}" alt=""
                    style="width: 100px;border-radius:100%;">
            </div>
            <div class=" form-group">
                <label>ID</label>
                <label class="form-control">{{customer._id}}</label>
            </div>
            <div class="form-group">
                <label>Email</label>
                <label class="form-control">{{customer.email}}</label>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="hidden" name="customerId" value={{customer._id}}>
                <input type="text" class="form-control" name="name" value="{{customer.name}}">
            </div>
            <div class="form-group">
                <input type="checkbox" onclick="myFunction()" id="isEnabled" name="isEnabled"
                    value="{{customer.isEnabled}}" {{#if customer.isEnabled}} checked="{{customer.isEnabled}}" {{/if}}>
                <label for="isEnabled">Enabled </label><br>
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </form>
    </div>
</div>
<script>
    function myFunction() {
        checkbox = document.getElementById("isEnabled");
        checkbox.value = checkbox.checked;
    }
</script>