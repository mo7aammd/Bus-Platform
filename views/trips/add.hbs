<div class="container">
  {{> messages }}
  <form action="/trips/add" method="post">
    <div class="form-group">
      <label for="tripSelectfrom">from</label>
      <select class="form-control" name="from" id="tripSelectfrom" value="{{{from}}}">
        {{#each cities}}
        <option {{../prefix}}{{selectCity ../from name}}>{{../prefix}}{{ name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="tripSelectTo">To</label>
      <select class="form-control" name="to" id="tripSelectTo" value="{{{to}}}">
        {{#each cities}}
        <option {{../prefix}}{{selectCity ../to name}}>{{../prefix}}{{ name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <div class="input-group-addon">$ Price</div>
      <input type="number" class="form-control" name="price" placeholder="Amount" value="{{{price}}}">
    </div>
    <div class="form-group">
      <label for="tripSelectSeats">Seats</label>
      <select class="form-control" name="seats" id="tripSelectSeats" value="{{{seats}}}">
        {{#each seatTypes}}
        <option {{../prefix}}{{selectCity ../seats name}}>{{../prefix}}{{ name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="tripdatetime">date and time</label>
      <input class='form-control' type="datetime-local" id="tripdatetime" name="tripdatetime" value="{{tripdatetime}}">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>