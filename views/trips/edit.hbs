<div class="container">
  {{> messages }}
  <form action="/trips/edit" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="tripId" value={{tripId}}>
    <div class="form-group">
      <label for="tripSelectfrom">from</label>
      <select class="form-control" name="from" id="tripSelectfrom" value="{{{from}}}">
        {{#each cities}}
        <option {{../prefix}}{{selectCity ../from name}}>{{../prefix}}{{ name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="tripSelectTo">To</label>
      <select class="form-control" name="to" id="tripSelectTo" value="{{{to}}}">
        {{#each cities}}
        <option {{../prefix}}{{selectCity ../to name}}>{{../prefix}}{{ name }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="tripdatetime">date and time</label>
      <input class='form-control' type="datetime-local" id="tripdatetime" name="tripdatetime" dirname={{tripdatetime}}>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>
<script>
  const dateTipefield = document.getElementById('tripdatetime');
  dateTipefield.valueAsNumber = new Date(parseInt(dateTipefield.dirName));
</script>