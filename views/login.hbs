<link rel="stylesheet" type="text/css" href="http://localhost:3000/css/style.css">
<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
<img class="wave" src="http://localhost:3000/images/wave.png">
	<div class="container">
		<div class="img">
			<img src="http://localhost:3000/images/bg.svg">
		</div>
		<div class="login-content">
			<form action="/users/login" method="post">
				<img src="http://localhost:3000/images/avatar.svg">
				<h2 class="title">Welcome</h2>
                {{> messages }}
           		<div class="input-div one">
           		   <div class="i">
           		   		<i class="fas fa-user"></i>
           		   </div>
           		   <div class="div">
           		   		<h5>Email</h5>
           		   		<input type="text" name="email" class="input">
           		   </div>
           		</div>
           		<div class="input-div pass">
           		   <div class="i"> 
           		    	<i class="fas fa-lock"></i>
           		   </div>
           		   <div class="div">
           		    	<h5>Password</h5>
           		    	<input type="password" name="password" class="input">
            	   </div>
            	</div>
            	<a href="/users/register">Register</a>
            	<input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
 <script type="text/javascript" src="http://localhost:3000/js/main.js"></script>    