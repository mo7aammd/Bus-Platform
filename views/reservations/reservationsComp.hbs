<div class="container">
    <div class="homeCard">
        <h1 class="text-center" style="color:#fff">Reservations by Company</h1>
    </div>
    <hr>
    <div>
        <a class="btn btn-warning float-right" href="/reservations/new/{{{tripId}}}">New Reservation</a>
    </div>
</div>
<div class="container">
    {{> messages }}
    {{#if reservations}}
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Trip</th>
                <th scope="col">Cutomer Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Seats</th>
                <th scope="col">Amount</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each reservations}}
            <tr class="border-bottom-danger">
                <th scope="row">{{../prefix}}{{_id}}</th>
                <td>{{../prefix}}{{trip.from}} ==> {{trip.to}}</td>
                <td>{{../prefix}}{{customerName}}</td>
                <td>{{../prefix}}{{phone}}</td>
                <td>{{../prefix}}{{seats}}</td>
                <td style="color:rgb(49, 118, 247);">${{../prefix}}{{amount}}</td>
                <td>{{../prefix}}{{createdAt}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{/if}}
</div>

<div class="pagination pagination-centered">
    <nav aria-label="...">
        <ul class="pagination">
            {{#paginate pagination type="first"}}
            <li {{#if disabled}}class="page-item disabled" {{/if}}><a class="page-link" href="?p={{n}}">First</a></li>
            {{/paginate}}
            {{#paginate pagination type="previous"}}
            <li {{#if disabled}}class="page-item disabled" {{/if}}><a class="page-link" href="?p={{n}}">Prev</a></li>
            {{/paginate}}
            {{#paginate pagination type="middle" limit="7"}}
            <li {{#if active}}class="page-item active" {{/if}}><a class="page-link" href="?p={{n}}">{{n}}</a></li>
            {{/paginate}}
            {{#paginate pagination type="next"}}
            <li {{#if disabled}}class="page-item disabled" {{/if}}><a class="page-link" href="?p={{n}}">Next</a></li>
            {{/paginate}}
            {{#paginate pagination type="last"}}
            <li {{#if disabled}}class="page-item disabled" {{/if}}><a class="page-link" href="?p={{n}}">Last</a></li>
            {{/paginate}}
        </ul>
    </nav>
</div>
<style>
    .homeCard {
        padding: 30px;
        margin-bottom: 30px;
        font-size: 21px;
        font-weight: 200;
        margin-top: 20px;
        border-radius: 20px;
        background: linear-gradient(-45deg, #EE7752, #E73C7E, #23A6D5, #23D5AB);
        background-size: 170% 170%;
        animation: animate 15s ease infinite;
    }

    @keyframes animate {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
</style>